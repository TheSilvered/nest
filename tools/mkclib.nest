|#| 'stdfs.nest' = fs
|#| 'stdrand.nest' = rand
|#| 'stdio.nest' = io
|#| 'stdsutil.nest' = su

#fail [
    >>> 'Usage: nest mkclib.nest [new <name>|update] <path>\n'
    1 @sys.exit
]

$_args_ 3 < ? @fail

_args_.1 'update' == ? [
    $_args_ 3 != ? @fail
    _args_.2 = path
] : _args_.1 'new' == ? [
    $_args_ 4 != ? @fail
    _args_.2 = name
    _args_.3 = path
] : @fail

sys.PLATFORM 'windows' == ? [
    Iter :: ('..\\include' @fs.list_dir) = headers
] : [
    Iter :: ('../include' @fs.list_dir) = headers
]

Iter :: {
    {
        'windows/projects/nest',
        'Debug',
        {
            'interpreter_dll.lib',
            'interpreter_dll.dll'
        }
    },
    {
        'windows/projects/nest',
        'Release',
        {
            'interpreter_dll.lib',
            'interpreter_dll.dll'
        }
    },
    {
        'windows/projects/nest',
        'x64/Debug',
        {
            'interpreter_dll.lib',
            'interpreter_dll.dll'
        }
    },
    {
        'windows/projects/nest',
        'x64/Release',
        {
            'interpreter_dll.lib',
            'interpreter_dll.dll'
        }
    },
    { 'linux', 'linux_debug', { 'libnest.so' } },
    { 'linux', 'linux_release/x86', { 'libnest.so' } },
    { 'linux', 'linux_release/x64', { 'libnest.so' } }
} = configs

_args_.1 'update' == ? [
    path 'nest_source' @fs.join = header_path
    path = build_path
] : [
    name ' ' '_' @su.replace_substr = name
    !(name (su.LETTERS su.DIGITS '_' ><) @su.is_charset) ? [
        >>> 'Invalid name\n'
        1 @sys.exit
    ]
    path (name '/nest_source' ><) @fs.join = header_path
    path name @fs.join = build_path

    header_path @fs.mkdirs
    ... configs := { _, config, _ } [
        build_path '/' config >< @fs.mkdirs
    ]
]

... headers := header_file [
    header_file header_path fs.CPO.overwrite @fs.copy
]

... configs := { config_path, config, config_files } [
    '../build/' config_path '/' config >< = config_path

    ... Iter :: config_files := file [
        config_path '/' file >< = file_path
        !(file_path @fs.isfile) ? [
            >>> ('"' file_path '" could not be found\n' ><)
            >>> ('  To add it build ' (config) ' and update the library\n' ><)
            ;
        ]
        file_path (build_path '/' config ><) fs.CPO.overwrite @fs.copy
    ]
]

_args_.1 'update' == ?
    @sys.exit

build_path @sys._set_cwd

