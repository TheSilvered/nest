|#| 'stdsys.nest' = sys
|#| 'stdio.nest' = io

#_assertion_failed msg [
    io.STDERR ('Assertion failed: ' msg '\n' ><) @io.write
    -1 @sys.exit
]

#assert_eq a b [
    a b == ? => null : a ' == ' b >< @_assertion_failed
]

#assert_ne a b [
    a b != ? => null : a ' != ' b >< @_assertion_failed
]

#assert_true a [
    a ? => null : a ' == true' >< @_assertion_failed
]

#assert_false a [
    !a ? => null : a ' == false' >< @_assertion_failed
]

#println s [ >>> (s '\n' ><) ]
